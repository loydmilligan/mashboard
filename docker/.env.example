# Mashb0ard Docker Configuration
# ================================
# Copy this file to .env and configure your values
# Usage: docker compose -f docker/docker-compose.proxy.yml up -d

# =============================================================================
# GENERAL
# =============================================================================

# Port to expose Mashb0ard (default: 3000)
PORT=3000

# External URL (used for service callbacks/redirects)
# Set this to your actual domain/IP if not localhost
EXTERNAL_URL=http://localhost:3000

# =============================================================================
# DATABASE (PostgreSQL)
# =============================================================================

# PostgreSQL credentials (used by mashboard-api and Vikunja)
POSTGRES_USER=mashboard
POSTGRES_PASSWORD=mashboard-secret-change-me
POSTGRES_DB=mashboard

# =============================================================================
# VIKUNJA (Task Management)
# =============================================================================

# Vikunja database name (separate from mashboard)
VIKUNJA_DB=vikunja

# JWT secret for Vikunja (change this to a random string!)
VIKUNJA_JWT_SECRET=vikunja-jwt-secret-change-me

# Allow new user registrations (true/false)
VIKUNJA_ENABLE_REGISTRATION=true

# =============================================================================
# DUMBPAD (Notes)
# =============================================================================

# Optional PIN protection for Dumbpad (leave empty for no PIN)
DUMBPAD_PIN=

# Custom title shown in Dumbpad
DUMBPAD_TITLE=Notes

# =============================================================================
# TERMIX (SSH Terminal)
# =============================================================================

# Salt for Termix encryption (change this to a random string!)
TERMIX_SALT=mashb0ard-termix-salt-change-me

# =============================================================================
# BYTESTASH (Code Snippets)
# =============================================================================

# JWT secret for ByteStash authentication (change this to a random string!)
BYTESTASH_JWT_SECRET=mashb0ard-bytestash-jwt-change-me

# Token expiry time (e.g., 24h, 7d, 30d)
BYTESTASH_TOKEN_EXPIRY=24h

# Allow new user registrations (true/false)
BYTESTASH_ALLOW_NEW_ACCOUNTS=true

# =============================================================================
# SEARXNG (Privacy Search)
# =============================================================================

# Custom instance name shown in SearXNG
SEARXNG_INSTANCE_NAME=Mashb0ard Search

# =============================================================================
# OPENROUTER (AI Chat & Better Brain)
# =============================================================================
# OpenRouter API key - REQUIRED for AI Chat and Better Brain features
# Get your key at: https://openrouter.ai/keys
OPENROUTER_API_KEY=

# OpenRouter base URL (default: https://openrouter.ai/api/v1)
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# =============================================================================
# BETTER BRAIN (Content Processing & Briefings)
# =============================================================================

# Default LLM model for content processing (default: openai/gpt-4o-mini)
BB_DEFAULT_MODEL=openai/gpt-4o-mini

# Embedding model for semantic search (default: openai/text-embedding-3-small)
BB_EMBEDDING_MODEL=openai/text-embedding-3-small

# Log level for Better Brain service (DEBUG, INFO, WARNING, ERROR)
BB_LOG_LEVEL=INFO

# Hours to look back when generating briefings (default: 12)
BB_BRIEFING_LOOKBACK_HOURS=12

# =============================================================================
# ADVANCED - External Service URLs (if running services separately)
# =============================================================================
# Only set these if you're NOT using the bundled services
# Leave commented out to use the built-in docker services

# DUMBPAD_EXTERNAL_URL=https://dumbpad.yourdomain.com
# TERMIX_EXTERNAL_URL=https://termix.yourdomain.com
# BYTESTASH_EXTERNAL_URL=https://bytestash.yourdomain.com
# SEARXNG_EXTERNAL_URL=https://searxng.yourdomain.com
